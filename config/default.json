{
  "app": {
    "name": "Yideng Koa服务",
    "port": 3000,
    "env": "development"
  },
  "cors": {
    "origin": "*",
    "methods": ["GET", "POST", "PUT", "DELETE"],
    "allowedHeaders": ["Content-Type", "Authorization"],
    "credentials": true
  },
  "rateLimiter": {
    "windowMs": 15 * 60 * 1000,
    "max": 100
  },
  "logger": {
    "level": "info",
    "format": "combined"
  },
  "session": {
    "secret": "yideng-secret-key",
    "cookie": {
      "maxAge": 86400000
    },
    "resave": false,
    "saveUninitialized": false
  }
}
